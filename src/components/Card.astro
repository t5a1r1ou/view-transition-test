---
interface Props {
  title: string;
  body: string;
  href?: string;
  id: number;
}

const { href, title, body, id } = Astro.props;
---

<div class="w-full">
  <a href={href}>
    <h2>
      {title}
    </h2>
    <div>
      <img
        src={`//picsum.photos/id/${id}/200`}
        class="w-full"
        transition:persist={`${id}`}
        transition:animate="morph"
      />
    </div>
    <p>
      {body}
    </p>
  </a>
</div>

---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  heading: string;
}

const { heading, title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <main class="h-full min-h-screen bg-slate-500">
      <h1 class="text-center text-xl">TestCommerce</h1>
      <h2 class="text-center text-xl m-4">{heading}</h2>
      <slot />
    </main>
  </body>
</html>
